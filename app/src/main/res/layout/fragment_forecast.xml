<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.hop.weatherapp.ForecastFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forecast0_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Sun 10 May"
                android:textColor="@color/White"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/forecast0_icon"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/icon_30" />

            <TextView
                android:id="@+id/forecast0_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="25/35"
                android:textColor="@color/White"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/forecast0_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Pe rfect Clearly"
                android:textColor="@color/White"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forecast1_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Sun 10 May"
                android:textColor="@color/White"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/forecast1_icon"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/icon_30" />

            <TextView
                android:id="@+id/forecast1_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="25/35"
                android:textColor="@color/White"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/forecast1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Perfect Clearly"
                android:textColor="@color/White"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forecast2_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Sun 10 May"
                android:textColor="@color/White"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/forecast2_icon"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/icon_30" />

            <TextView
                android:id="@+id/forecast2_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="25/35"
                android:textColor="@color/White"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/forecast2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Perfect Clearly"
                android:textColor="@color/White"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forecast3_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Sun 10 May"
                android:textColor="@color/White"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/forecast3_icon"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/icon_30" />

            <TextView
                android:id="@+id/forecast3_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="25/35"
                android:textColor="@color/White"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/forecast3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Perfect Clearly"
                android:textColor="@color/White"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>